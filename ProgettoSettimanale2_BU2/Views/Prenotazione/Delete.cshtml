@model Prenotazione

@{
    ViewData["Title"] = "Elimina Prenotazione";
}

<h2>Elimina Prenotazione</h2>

<p>Sei sicuro di voler eliminare questa prenotazione?</p>

<table class="table">
    <tr>
        <th>Cliente</th>
        <td>@Model.Cliente.Nome @Model.Cliente.Cognome</td>
    </tr>
    <tr>
        <th>Camera</th>
        <td>@Model.Camera.Numero</td>
    </tr>
    <tr>
        <th>Data Inizio</th>
        <td>@Model.DataInizio.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Data Fine</th>
        <td>@Model.DataFine.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Stato</th>
        <td>@Model.Stato.Nome</td>
    </tr>
</table>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="PrenotazioneId" />
    <button type="submit" class="btn btn-danger">Conferma Eliminazione</button>
    <a asp-action="Index" class="btn btn-secondary">Annulla</a>
</form>

