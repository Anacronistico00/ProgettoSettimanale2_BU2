@model EditClienteViewModel

@{
    ViewData["Title"] = "Modifica Cliente";
}

<h2>Modifica Cliente</h2>

<form asp-controller="Cliente" asp-action="Edit" method="post">
    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" required />
    </div>
    <div class="form-group">
        <label for="Cognome">Cognome</label>
        <input type="text" class="form-control" id="Cognome" name="Cognome" value="@Model.Cognome" required />
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>
    <div class="form-group">
        <label for="Telefono">Telefono</label>
        <input type="text" class="form-control" id="Telefono" name="Telefono" value="@Model.Telefono" required />
    </div>
    <button class="btn btn-primary">Salva Modifiche</button>
</form>