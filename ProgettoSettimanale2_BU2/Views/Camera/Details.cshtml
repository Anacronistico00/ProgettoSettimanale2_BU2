@model Camera
@{
    ViewData["Title"] = "Dettagli Camera";
}

<h2>Dettagli Camera</h2>

<div>
    <h4>Camera @Model.Numero</h4>
    <dl class="row">
        <dt class="col-sm-2">Numero Camera</dt>
        <dd class="col-sm-10">@Model.Numero</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Tipo?.Nome</dd>

        <dt class="col-sm-2">Prezzo</dt>
        <dd class="col-sm-10">@Model.Prezzo.ToString("C2")</dd>

        <dt class="col-sm-2">Disponibilità</dt>
        <dd class="col-sm-10">@(Model.Disponibile ? "Disponibile" : "Non Disponibile")</dd>

        <dt class="col-sm-2">Prenotazioni</dt>
        <dd class="col-sm-10">
            @if (Model.Prenotazioni != null && Model.Prenotazioni.Any())
            {
                <ul>
                    @foreach (var prenotazione in Model.Prenotazioni)
                    {
                        <li>Data: @prenotazione.CreatedAt</li>
                    }
                </ul>
            }
            else
            {
                <p>Non ci sono prenotazioni.</p>
            }
        </dd>
    </dl>
</div>
